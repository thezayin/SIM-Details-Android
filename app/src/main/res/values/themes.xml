<resources>
    <!-- Base application theme. -->
    <style name="Theme.SIMDETAILS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="TexView.Demi.Woodsmoke.20sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_demi</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TexView.Regular.Nevada.12sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/aspira_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


</resources>